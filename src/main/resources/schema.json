{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User Profile",
  "type": "object",
  "properties": {
    "username": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "pattern": "^[0-9]{10}$"
    },
    "alternate_email": {
      "type": "string",
      "format": "email"
    },
    "address": {
      "type": "string"
    },
    "zipcode": {
      "type": "string"
    }
  },
  "required": ["username"],
  "dependentRequired": {
    "email": ["phone", "alternate_email"],
    "address": ["zipcode"]
  }
}
